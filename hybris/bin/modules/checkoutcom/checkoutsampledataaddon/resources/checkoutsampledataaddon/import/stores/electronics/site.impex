$defaultLanguage = en
$storeUid = electronics
$siteUid = electronics
$webServiceSiteUid = $siteUidWS
$siteMapLangCur = jaJpy, jaUsd, enJpy, enUsd, deJpy, deUsd, zhJpy, zhUsd, enBrl, enAud, enNdz, enBhd, enKwd, enQar, enEgp, enPln, enMxn, enGbp, enEur
